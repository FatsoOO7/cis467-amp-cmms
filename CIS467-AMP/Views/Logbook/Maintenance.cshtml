@model IEnumerable<CIS467_AMP.Models.Logbook.LogbookWorkOrder>
@{
    /**
     * Author: Rodney Fulk
     * Stockroom orders logbook
     */

    //Sets tab bar title
    ViewBag.Title = "Maintenance";

    //Uses this scaffolding as main layout --
    //can change later, but the below cshtml is called by RenderBody() in _layout.cshmtl
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @Html.Partial("_LogbookLeftNavBar") @*Could put a model as second argument*@
    <div class="col-md-10">
        <h1 id="titleS">@ViewBag.Title</h1>
    </div>
    <div>

        <div class="col col-md-10">
            <table class="table">
                <tr>
                    <th>Date Requested</th>
                    <th>Requested by</th>
                    <th>Asset</th>
                    <th>Work Order Number</th>
                    <th>Work Order Status</th>
                    <th>Status Updated</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.WorkOrder.CreatedDateTime)</td>
                        <td>@Html.DisplayFor(modelItem => item.WorkOrder.Creator.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.WorkOrder.AssetInventory.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.WorkOrder.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.WorkOrder.MaintenanceStatus.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.WorkOrder.LastStatusDateTime)</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
