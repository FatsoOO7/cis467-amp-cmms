@using System.Web.Mvc.Html
@using CIS467_AMP.ViewModels.Maintenance
@model CIS467_AMP.ViewModels.Maintenance.WorkOrderViewModel
@{
    /**
     * Author: Rodney Fulk
     * Logbook entry page
     */

    //Sets tab bar title
    ViewBag.Title = "Edit Work Order : "+Model.MaintenanceWorkOrder.Id;

    //Uses this scaffolding as main layout --
    //can change later, but the below cshtml is called by RenderBody() in _layout.cshmtl
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_TitleAndLinks")
<div class="row">
    <div>
       
        <div class="col-md-10">
            @using (Html.BeginForm("Edit", "Maintenance"))
            {
                <div class="field-validation-error"><br />@Model.Message<br /><br/></div>
                @Html.AntiForgeryToken()
                @Html.Partial("WorkOrder", Model)
                @Html.HiddenFor(i => i.MaintenanceWorkOrder.Id)
                <button type="submit" class="btn btn-primary" name ="save" value="save">Save Entry</button>
                <button type="submit" class="btn btn-primary" name ="time" value="time">Add Time</button>
                <button type="submit" class="btn btn-primary" name ="plan" value="plan">See JobPlan (If there is one)</button>
            }
        </div>
    </div>
</div>
